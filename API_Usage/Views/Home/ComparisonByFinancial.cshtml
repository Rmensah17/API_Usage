@model EQComparison

@{
    ViewData["Title"] = "ComparisonByFinancial";
}

<h2>ComparisonByFinancial</h2>

<h4>EQComparison</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ComparisonByFinancial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>
                Symbol
            </th>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Type
            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model.FirstFinancial)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.netincome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.totaldebt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.totalcash)
                </td>
            </tr>
        }
</table>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ComparisonByEquity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



<table>
    <thead>
        <tr>
            <th>
                Symbol
            </th>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Type
            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model.SecondFinancial)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.netincome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.totaldebt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.totalcash)
                </td>
            </tr>
        }
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
